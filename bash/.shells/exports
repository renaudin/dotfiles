#EDITOR
export EDITOR='vim'

PYTHONPATH=$PYTHONPATH:$HOME/lb2lctaunu-analysis/cuts
export PYTHONPATH

export PATH=${HOME}/.local/bin${PATH:+:$PATH}

#ROOT Configuration
function rootconf(){
    cd ~
    cd ROOT/root
    . bin/thisroot.sh
    cd
    
    # Export needed by ROOT
    export LD_LIBRARY_PATH=$ROOTSYS/lib:$PYTHONDIR/lib:$LD_LIBRARY_PATH
    export PATH=$ROOTSYS/bin:$PATH
    export PYTHONPATH=$ROOTSYS/lib:$PYTHONPATH
    export DLHCB=svn+ssh://vrenaudi@cern.ch/reps/lhcbdocs
}
#Anaconda export
export PATH="/home/renaudin/anaconda2/bin:$PATH"
