# Cute shell shortcuts
alias ls='ls --sort=extension --color=auto'
alias ll='ls -lh'
alias l='ls -lh'
alias lal='ls -alh'
alias la='ls -A'
alias lh='ls -lht'

alias grep='grep --color'
alias tmux='tmux -2'

# Some more, to avoid mistakes
alias rm='rm -vi'
alias cp='cp -vi'
alias mv='mv -vi'

# Copy using clipboard
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# Cool colors for Man Pages
alias man="TERMINFO=~/.terminfo TERM=mostlike LESS=C PAGER=less man"

# Directory navigation aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# lxplus alias
alias cern='ssh -Y lxplus'

#tar
alias newtar='tar -zcvf'
alias extar='tar -zxvf'

#ROOT
#alias root='root -l'

#python shortcuts
alias pc='python -c'
alias ipy='ipython'

# Shortcut to test quick changes to bashrc
alias reload='source ~/.bashrc'


