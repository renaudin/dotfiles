# Cute shell shortcuts
alias ls='ls --sort=extension --color=always'
alias ll='ls -lh'
alias l='ls -lh'
alias lal='ls -alh'
alias la='ls -A'
alias lh='ls -lht'

alias less='less -R'

alias grep='grep --color'
alias tmux='tmux -2'

# Some more, to avoid mistakes
#alias rm='rm -vi'
alias cp='cp -vi'
alias mv='mv -vi'
alias rm='rm -vi'

# Copy using clipboard
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

# Directory navigation aliases
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# lxplus alias
alias cern='ssh -Y lxplus.cern.ch'

# oxford server configuation
alias gammainit='source ~/gamma_env.sh'

#tar
alias newtar='tar -zcvf'
alias extar='tar -zxvf'

#ROOT
alias root='root -l'

#python shortcuts
alias pc='python -c'
alias ipy='ipython --matplotlib'
alias condaconf2='source ~/conda_setup2.sh'
alias pyphysics="source ~/PyPhysics/bin/activate"

# Shortcut to test quick changes to bashrc
alias reload='source ~/.bashrc'

# Batch aliases
alias uqstat='qstat -u daussy-renaudin | less'
alias huqstat='qstat -u daussy-renaudin | less | head'
alias tuqstat='qstat -u daussy-renaudin | less | tail'
