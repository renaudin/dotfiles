#ROOT Configuration
function rootconf(){
    cd ~/root
    . bin/thisroot.sh
    cd

    # Export needed by ROOT
    export LD_LIBRARY_PATH=$ROOTSYS/lib:$PYTHONDIR/lib:$LD_LIBRARY_PATH
    export PATH=$ROOTSYS/bin:$PATH
    export PYTHONPATH=$ROOTSYS/lib:$PYTHONPATH
}

export PYTHONPATH=$PYTHONPATH:~/lb2lctaunu-analysis/analysis/analysis_tools/
